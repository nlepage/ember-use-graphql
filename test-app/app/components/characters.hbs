<h1>Characters</h1>
<p>
  <label for="characters-query">Search:</label>
  <Input id="characters-query" @type="text" @value={{this.query}} />
</p>
{{#if this.loading}}
  <p>Loading...</p>
{{else}}
  <ul>
    {{#each this.characters as |character|}}
      <li class="characters-character-preview">
        <CharacterPreview @character={{character}} />
      </li>
    {{/each}}
  </ul>
{{/if}}